<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.sam.gogozoo.info.InfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{() -> viewModel.leave()}"
        tools:context="com.sam.gogozoo.info.InfoDialog">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bottom_background"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/markTitle"
                style="@style/TextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Mark Title"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/buttonancel"
                app:layout_constraintStart_toEndOf="@+id/imageIcon"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText"
                tools:text="Mark Title" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonNav"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/dark_green"
                android:fontFamily="@font/noto_sans"
                android:gravity="fill_vertical"
                android:letterSpacing="0.15"
                android:paddingLeft="20dp"
                android:stateListAnimator="@null"
                android:text="Go"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/markTitle"
                app:layout_constraintTop_toBottomOf="@+id/markTitle"
                tools:ignore="HardcodedText,UnusedAttribute"
                tools:text="Go" />

            <ImageView
                android:id="@+id/imageArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/white_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/buttonNav"
                app:layout_constraintEnd_toEndOf="@+id/buttonNav"
                app:layout_constraintTop_toTopOf="@+id/buttonNav" />

            <ImageButton
                android:id="@+id/buttonancel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/button_cancel" />

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_nav_profile_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
